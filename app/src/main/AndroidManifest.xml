<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.passions.thehinduquestions">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyQuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StartPracticeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestionDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestionDetailsScrollActivity"
            android:label="@string/title_activity_question_details_scroll"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResultActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>