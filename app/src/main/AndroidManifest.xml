<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.passions.thehinduquestions">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DailyQuestionActivity" />
        <activity android:name=".StartPracticeActivity" />
        <activity android:name=".QuestionDetailsActivity" />
        <activity
            android:name=".QuestionDetailsScrollActivity"
            android:label="@string/title_activity_question_details_scroll"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ResultActivity"></activity>
    </application>

</manifest>