<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="7dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="7dp"
    android:clickable="true"
    android:elevation="7dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:translationZ="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:fontFamily="@font/lobster_regular"
            android:gravity="center_vertical"
            android:padding="9dp"
            android:textColor="#000000"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/lblQuestionExtraDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:lineSpacingExtra="1dp"
            android:padding="9dp"
            android:textColor="@color/colorBlack" />


        <TextView
            android:id="@+id/lblOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/lblOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/lblOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/lblOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/lblCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/lblYourAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>


</android.support.v7.widget.CardView>