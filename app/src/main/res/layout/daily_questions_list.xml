<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="7dp"
    android:clickable="true"
    android:elevation="7dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:translationZ="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/lblQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/color_red" />

        <TextView
            android:id="@+id/lblQuestionExtraDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/lblOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/lblOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/lblOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/lblOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorAccent" />


        <Button
            android:id="@+id/btnShowAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/view_answer"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack" />


        <TextView
            android:id="@+id/lblCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_chevron_right_black_24dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorBlack"
            android:visibility="gone" />


        <Button
            android:id="@+id/btnViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/view_description"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnListen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/listen"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack" />


    </LinearLayout>

</android.support.v7.widget.CardView>