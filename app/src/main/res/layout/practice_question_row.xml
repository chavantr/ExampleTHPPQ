<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="7dp"
    android:clickable="true"
    android:elevation="7dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:translationZ="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:id="@+id/lblQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="The recent in news"
            android:textColor="@color/colorBlack" />


        <TextView
            android:id="@+id/lblQuestionExtraDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="which is sentence is correct"
            android:textColor="@color/colorBlack" />


        <RadioGroup
            android:id="@+id/grpAnswer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/lblOptionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent" />


            <RadioButton
                android:id="@+id/lblOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent" />


            <RadioButton
                android:id="@+id/lblOptionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent" />


            <RadioButton
                android:id="@+id/lblOptionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent" />

        </RadioGroup>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Submit"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

</android.support.v7.widget.CardView>